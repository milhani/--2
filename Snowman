#include <iostream>
#include <vector>

using namespace std;


struct Per_stack {
    int prev;
    size_t weight;

    explicit Per_stack(int p, size_t w) {
        prev = p;
        weight = w;
    }
};

int main() {
    int n, t;
    size_t m, ans = 0;
    cin >> n;
    vector<Per_stack> arr;
    arr.emplace_back(Per_stack(0, 0));
    for (int i = 1; i <= n; ++i) {
        cin >> t >> m;
        if (m != 0) {
            arr.emplace_back(Per_stack(t, arr[t].weight + m));
        } else {
            arr.emplace_back(arr[arr[t].prev]);
        }
        ans += arr[i].weight;
    }
    cout << ans << endl;
}
